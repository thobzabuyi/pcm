@model  Common_Objects.Models.User_Forgot_Password

@{
    ViewBag.Title = "Login";
}

<h3>Please provide a Username to perform a password reset</h3>

@using (Html.BeginForm())
{
    <div class="panel panel-primary">
        <div class="panel-heading" style="text-align: center">
            Reset Password
        </div>
        <div class="panel-body">

            <div class="row">

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.LabelFor(x => x.Username, new { @class = "control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

            </div>
            
            @ViewBag.Message
            
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="panel-footer">

            <input type="submit" id="ButtonReset" value="Reset" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", "Home", routeValues: null, htmlAttributes: new { id = "cancelLink", @class = "btn btn-danger" })

        </div>

    </div>
}
