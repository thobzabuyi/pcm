@model Common_Objects.ViewModels.PCMCaseDetailsViewModel
<br />
<style>
    #btnSearch {
        outline: none !important;
        border-radius: 8px 8px 0px 0px;
        box-shadow: none;
    }

    #tool-bar {
        transition: width 0.1s;
        -webkit-transition: width 0.1s;
    }



</style>

@using (Html.BeginForm("UpdateFamillyBG", "PCMCase", new { id = Model.Family_information_Id }))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        <div class="panel-heading" style="text-align: center">
            Family Information : <span style="color:white;font-weight: bolder; font-size:large; text-shadow: 2px 2px grey; ">Child Ref (@ViewBag.ModuleRef)</span>
        </div>
        <div class="panel-body">

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(x => x.Family_Background)
                </div>
                <div class="col-md-8 form-group">
                    @Html.TextAreaFor(x => x.Family_Background, new { @id = "Family_Background", rows = "2", @class = "form-control", @required = "required" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" id="ButtonSave" value="Save" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>


}
<div class="panel panel-primary">

    <div class="panel-heading" style="text-align: center">
        Family Member Details
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">

                <div id="oldCasesCasesDiv">
                    @Html.Action("FamilyMemberdeatailsList", "PCMCase")
                </div>
            </div>
        </div>
    </div>
    </div>






