@model Common_Objects.ViewModels.PCMCaseDetailsViewModel





<head>

    <style>
        .collapsible2 {
            /*color: white;*/
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            color: #333;
            background-color: #f5f5f5;
            border-color: #ddd;
            padding: 4px 5px;
            
        
            border-top-left-radius: 4px;
            border-right: none;
            height: 45px;
      -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    border: solid 1px #d3e0e9;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
    -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
    background: #f5f5f5;
  
    padding: 8px 12px;
    text-decoration: none;

     border-bottom: none;

           
        }

        .content {
            padding: 0 18px;
            display: none;
            overflow: hidden;
            background-color: white;
            border: 1px solid #ddd;

        }
    </style>
</head>
<body>



    <p>Collapsibles:</p>
    <button class="collapsible2">Facilities, Facility Bed Sapce, Facility Programmes</button>

    <div class="content">
        <br>
        <br>
        @Html.Action("GetFacilitySpacedetails", "PCMCase")
    </div>

    <button class="collapsible2">Bed Space Request</button>

    <div class="content">
   
        @Html.Action("GetFacilityBedSpaceRequestdetails", "PCMCase")
    </div>
  

    <script>
var coll2 = document.getElementsByClassName("collapsible2");
var i;

for (i = 0; i < coll2.length; i++) {
  coll2[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content2 = this.nextElementSibling;
    if (content2.style.display === "block") {
      content2.style.display = "none";
    } else {
      content2.style.display = "block";
    }
  });
}
    </script>

</body>


