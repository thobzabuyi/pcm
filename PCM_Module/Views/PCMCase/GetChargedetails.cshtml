@model Common_Objects.ViewModels.PCMCaseDetailsViewModel
<br />

<div class="tab-pane" id="tab3">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default form-horizontal">

                <div class="panel-body">
                    @using (Html.BeginForm("CreateCharge", "PCMCase", new { id = Model.Charge_Detail_Id }))
                    {

                        <div class="row">

                            <div class="col-md-2">
                                @Html.LabelFor(x => x.Charge_Id)
                            </div>
                            <div class="col-md-2 form-group">
                                @Html.ListBoxFor(x => x.Charge_Id, new SelectList(Model.Charge_List, "Charge_Id", "Charge_Description"), new { @multiple = "multiple", @id = "SelCharge", @class = "listbox", @style = "width:600px;height:200px;border-radius:10px;outline: 0;-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6); overflow-x:auto;" })


                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-10 form-group">
                                <p>@Html.Action("GetSelectedChargeFromDB", "PCMCase", new { @id = Convert.ToInt32(Session["CaseID"]) })</p>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <input type="submit" id="ButtonSave" value="Save" class="btn btn-success" />
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    }
                </div>


            </div>
        </div>
    </div>
</div>




<script type="text/javascript">
    var j = jQuery.noConflict();
    j(function () {
        j('#SelCharge1').multiselect({
            includeSelectAllOption: true
        });
    });
</script>

