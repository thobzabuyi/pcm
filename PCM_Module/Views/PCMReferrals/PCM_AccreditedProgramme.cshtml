@model Common_Objects.ViewModels.PCMReferralsViewModel
@{
//Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


@using (Html.BeginForm("addPreliminary", "PCMPreliminary", FormMethod.Post))
    {
    <div class="form-horizontal">
    @*<hr />*@

        <form id="form">
            <fieldset id="SubmitFormCounselling">
                <div class="row">
                    @Html.HiddenFor(m => m.Category_Referrals_Id, new { @id = "Category_Referrals_Id" })
                    @Html.HiddenFor(m => m.Referrals_Id, new { @id = "Referrals_Id" })
                </div>



                <div class="row">
                    <div align="center" class="col-md-1">

                    </div>
                    <div class="col-md-10 form-group">
                        <input type="checkbox" id="Child_Need_Care_Protection" name="Child_Need_Care_Protection" value="0" checked />
                        (ii) Referral of child to counselling or therapy in terms of section 9(3)(a)(ii) of the Act [CJA]  
                    </div>
                </div>

                <div class="row">
                    <div align="center" class="col-md-1">

                    </div>
                    <div align="center" class="col-md-10">
                        After having assessed the above-mentioned child, I have decided to refer him or her for counselling/therapy for the reasons set out in the attached assessment report referred to in section 40 of the Act.
                    </div>
                </div>

                <br />


                <div class="row">
                    <div  align="center" class="col-md-5">
                        1. The child must receive counselling/therapy for the period of,
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextBoxFor(m => m.Period_From, new { @id = "Period_From", @class = "form-control", @placeholder = "" })
                    </div>

                    <div class="col-md-2">
                        Until.
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextBoxFor(m => m.Period_To, new { @id = "Period_To", @class = "form-control", @placeholder = "" })
                    </div>
                </div>

                <div class="row">
                    <div align="left" class="col-md-5">
                        2.You are requested to furnish me with reports on the child’s progress and compliance with the decision
                    </div>
                    <div class="col-md-5 form-group">
                        @Html.TextAreaFor(model => model.Progress_Report, new { @id = "Progress_Report", @class = "form-control", rows = "6", cols = "10" })
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-5">
                        (Specify how often).
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextBoxFor(m => m.Comitted_Minor_Offence, new { @id = "Comitted_Minor_Offence", @class = "form-control", @placeholder = "" })
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-5">
                        Signature: Probation Officer
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextBoxFor(m => m.Employee_Id_Copy_To, new { @id = "Employee_Id_Copy_To", @class = "form-control", @placeholder = " displayed*" })
                    </div>

                </div>


                <div class="row">
                    <div class="col-md-5">
                        Date
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextBoxFor(m => m.Date_Created, new { @id = "Date_Created", @class = "form-control", @placeholder = " " })
                    </div>
                </div>

                <div class="row">
                    <div align="center" class="col-md-12">
                        For the purposes of the section 97(6) register, the probation office is required to report to the Director-General: Social Development on the child’s compliance with the decision.
                    </div>
                </div>

                <br />


                <div class="row">
                    <div class="col-md-5">
                        Copy To.
                    </div>
                    <div class="col-md-5" form-group">
                        @Html.TextAreaFor(model => model.Employee_Id_Copy_To, new { @id = "Employee_Id_Copy_To", @class = "form-control", rows = "6", cols = "10" })
                    </div>
                </div>
                <br />

                <div align="center" class="form-group">
                    <a href="#" class="btn btn-success" id="SaveRecordCounselling">Save</a>
                </div>

            </fieldset>
        </form>

        </div>
        }

    @*</div>*@

    