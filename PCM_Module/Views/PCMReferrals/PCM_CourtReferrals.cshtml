@model Common_Objects.ViewModels.PCMReferralsViewModel
@{
//Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


        @*<div class="panel panel-primary">*@
            @*<div class="panel-heading" style="text-align: center">
                Referrals to Court
            </div>*@


            @using (Html.BeginForm("PCM_CourtReferrals", "PCMReferrals", FormMethod.Post))
            {
                <div class="form-horizontal">
                    @*<h4>Add New Childrens Court</h4>*@
                    @*<hr />*@

                    <form id="form">
                        <fieldset id="SubmitFormC">
                            <div class="row">
                                @Html.HiddenFor(m => m.Court_Referrals_Id, new { @id = "Court_Referrals_Id" })
                                @Html.HiddenFor(m => m.Referrals_Id, new { @id = "Referrals_Id" })
                            </div>
                            <div class="row">
                                <div align="center" class="col-md-1">
                                    
                                </div>
                                <div class="col-md-10 form-group">
                                    @*@Html.CheckBoxFor(m => m.Child_Need_Care_Protection)*@
                                    <input type="checkbox" name="Child_Need_Care_Protection" id="Child_Need_Care_Protection" />
                                    May be a child in need of care and protection as referred to in section 150 (1) and (2) of the Children’s Act, 2005;
                                </div>
                            </div>
                            <div class="row">
                                <div align="center" class="col-md-1">
                                   
                                </div>

                                <div class="col-md-10 form-group">
                                    @*@Html.CheckBoxFor(m => m.Stay_At_Parents_Home)*@
                                    <input type="checkbox" name="Stay_At_Parents_Home" id="Stay_At_Parents_Home" />
                                    Does not live at his or her parents’ home or in appropriate alternative care;
                                </div>
                            </div>

                            <div class="row">
                                <div align="center" class="col-md-1">
                                   
                                </div>
                                <div class="col-md-10 form-group">
                                    @*@Html.CheckBoxFor(m => m.Comitted_Minor_Offence)*@
                                    <input type="checkbox" name="Comitted_Minor_Offence" id="Comitted_Minor_Offence" />
                                    Is alleged to have committed a minor offence/offences aimed at meeting his/her basic needs for food or warmth.
                                </div>
                            </div>



                            <div class="row">
                                <div align="center" class="col-md-12">
                                    1. I accordingly refer the matter to the children’s court to be dealt with in terms of sections 155 and 156 of that Act.
                                </div>
                            </div>

                            <div class="row">
                                <div align="center" class="col-md-12">
                                    2. I attach a copy of the assessment report referred to in section 40 of the Act and other relevant documents.
                                </div>
                            </div>

                            <br />


                            <div class="row">
                                <div align="center" class="col-md-3">
                                    Signature: Probation Officer
                                </div>
                                <div class="col-md-2 form-group">
                                    @Html.TextBoxFor(m => m.Employee_Id_Copy_To, new { @id = "Employee_Id_Copy_To", @class = "form-control", @placeholder = " displayed*" })
                                </div>

                                <div align="center" class="col-md-3">
                                    Date
                                </div>
                                <div class="col-md-2 form-group">
                                    @Html.TextBoxFor(m => m.Date_Created, new { @id = "Date_Created", @class = "form-control", @placeholder = " " })
                                </div>
                            </div>



                            <div class="row">
                                <div align="center" class="col-md-12">
                                    For the purposes of the section 97(6) register, the probation office is required to report to the Director-General: Social Development on the child’s compliance with the decision.
                                </div>
                            </div>

                            @*<br />*@



                            <div class="row">
                                <div align="center" class="col-md-3">
                                    Copy To.
                                </div>
                                <div class="col-md-6 form-group">
                                    @Html.TextAreaFor(model => model.Employee_Id_Copy_To, new { @id = "Employee_Id_Copy_To", @class = "form-control", rows = "6", cols = "10" })
                                </div>
                            </div>

                            <div class="row">
                                <div align="center" class="col-md-3">
                                    Referral_Date
                                </div>
                                <div class="col-md-3 form-group">
                                    @Html.TextBoxFor(m => m.Refferal_Date, new { @id = "Refferal_Date", @class = "form-control", @placeholder = " " })
                                    @Html.ValidationMessageFor(model => model.Refferal_Date)
                                   
                                </div>
                            </div>

                            @*<div class="form-group">
                                <a href="#" class="btn btn-success" id="SaveRecord">Save</a>
                            </div>*@
                            <div class="row">
                                <div class="col-md-4">

                                </div>
                                <div class="col-md-2 form-group">
                                    <a href="#" class="btn btn-block btn-success" id="SaveRecord">Save</a>
                                </div>
                            </div>


                        </fieldset>
                    </form>

                </div>
            }

           

        @*</div>*@


       <script>

           $("#SaveRecord").click(function () {
               var data = $("#form").serialize();
               $.ajax({
                   type: "Post",
                   url: "/PCMReferrals/PCM_CourtReferrals",
                   data: data,
                   success: function (result) {
                       alert("Success!..");
                       //window.location.href = "/Home/Index";
                       //$("#MyModal").modal("hide");
                   }
               })
           })


       </script>