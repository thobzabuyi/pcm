@model Common_Objects.ViewModels.PCMPersonViewModel


<head>

 
</head>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-primary">
        @Html.HiddenFor(model => model.Person_Id, new { id = "Person_Id" })
        <div class="panel-heading" style="text-align: center">
            Child Details: <span style="color:white;font-weight: bolder; font-size:large; text-shadow: 2px 2px grey; ">Child Ref (@ViewBag.ModuleRef)</span>
        </div>
        <div class="panel-body">

            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(x => x.First_Name)
                </div>
                <div class="col-md-3 form-group">
                    @Html.TextBoxFor(x => x.First_Name, new { @id = "ClientFirstName", @class = "form-control", @required = "required" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Last_Name)
                </div>
                <div class="col-md-3 form-group">
                    @Html.TextBoxFor(x => x.Last_Name, new { @id = "ClientLastName", @class = "form-control", @required = "required" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Date_Of_Birth, new { @id = "LabelDateOfBirth", @class = "control-label" })
                </div>
                <div class="col-md-3 form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Date_Of_Birth, new { @id = "Date_of_Birth", @class = "form-control jqueryui-marker-datepicker" })
                        <label for="Date_of_Birth" class="input-group-addon btn">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Identification_Number)
                </div>
                <div class="col-md-3 form-group">
                    @Html.TextBoxFor(x => x.Identification_Number, new { @class = "form-control" })
                </div>
            </div>

        </div>
 
    </div>
}


    <script type="text/javascript">
        $(document).ready(function () {

            // Initialize items marked as datepickers
            $(".jqueryui-marker-datepicker").datepicker({
                dateFormat: "dd M yy",
                changeYear: true
            });

        });

    </script>