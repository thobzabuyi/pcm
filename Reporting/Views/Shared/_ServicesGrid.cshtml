@using GridMvc.Html
@model IEnumerable<Common_Objects.Models.VEPServices>

<div class="row">
    <div class="col-md-12">
        @Html.Grid(Model).Columns(columns =>
        {
            columns.Add(x => x.GetListOfServiceType).Titled("Type").Sortable(true);
            columns.Add(x => x.GetListOfSpecificServicese).Titled("First Name").Sortable(true);
            columns.Add(x => x.GetSpecificServicese).Titled("Last Name").Sortable(true);
            columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Edit", "Edit", new { id = d.Item_Id, personId = d.Person_Id, selectedRelationTypeId = d.Relation_Type_Id }, new { @class = "popupRelation btn btn-success" }) </b>);
    columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Delete", "Delete", new { id = d.Person_Education_Id }, new { @class = "popupEducation btn btn-danger" }) </b>);*@
        }).WithPaging(5)
    </div>
</div>
