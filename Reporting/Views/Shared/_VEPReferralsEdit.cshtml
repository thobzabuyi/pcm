
@model Common_Objects.Models.VEP_Referals

@{
    ViewBag.Title = "Edit Referral Details";
}

@using (Html.BeginForm("Edit", "VEPReferrals", FormMethod.Post, new { role = "form", id = "updateVEPReferal" }))
{
    @Html.AntiForgeryToken()

    <div class="panel-body">
        <div class="row">
            @Html.HiddenFor(x => x.ReferalsId)
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.ToDepartment, new { @class = "control-label" })
                </div>
                <div class="col-md-3 form-group">
                    @Html.DropDownListFor(n => n.ToDepartment, Model.Referals_List, new { @class = "form-control", @required = "required" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Notes, new { @class = "control-label" })
                </div>
                <div class="col-md-3 form-group">
                    @Html.TextAreaFor(n => n.Notes, new { @class = "form-control", @rows = 3, @cols = 20, @required = "required" })
                </div>
            </div>
        </div>
    </div>


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="panel-footer">
        <input type="submit" id="ButtonSave" value="Update Referral" class="btn btn-success" />
    </div>
}