@using GridMvc.Html
@model IEnumerable<Common_Objects.ViewModels.VEPReferalsViewModel>

<div class="row">
    <div class="col-md-12">
        @Html.Grid(Model).Columns(columns =>
   {
   columns.Add(x => x.FromDepartment).Titled("From Department").Sortable(true);
   columns.Add(x => x.ToDepartment).Titled("To Department").Sortable(true);
   columns.Add(x => x.Notes).Titled("Notes").Sortable(true);
   columns.Add(x => x.CreateDate).Titled("Date Refered").Sortable(true);
   columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Edit", "Edit", new { id = d.Referalsid }, new { @class = "modal-link btn btn-success" }) </b>);
   }).WithPaging(10)
    </div>
</div>

