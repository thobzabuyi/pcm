@model Common_Objects.Models.VEP_Services

@{
    ViewBag.Title = "Edit Services Details";
}

@using (Html.BeginForm("Edit", "VEPServices", FormMethod.Post, new { role = "form", id = "updateVEPServices" }))
{
    @Html.AntiForgeryToken()

    <div class="panel-body">

        <div class="row">

            @Html.HiddenFor(x => x.CaseId)

            @Html.HiddenFor(x => x.ServiceId)

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.ServiceTypeId, new { @class = "control-label" })
                        <label style="color:red;font-style:oblique"> *</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.ServiceTypeId, Model.Service_List, "- Please select -", new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6 form-group">
                        @Html.LabelFor(x => x.ServiceNotes, new { @class = "control-label" })
                        <label style="color:red;font-style:oblique">*</label>
                    </div>
                    <div class="col-md-6">
                        @Html.TextAreaFor(x => x.ServiceNotes, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="panel-footer">
        <input type="submit" id="ButtonUpdate" value="Update Service" class="btn btn-success" />
    </div>
}